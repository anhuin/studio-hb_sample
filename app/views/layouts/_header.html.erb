<%= link_to "studiohbsample", root_path, :class => 'brand' %>
<ul class="nav pull-right">
  <% if !user_signed_in? %>
      <li>
        <%= link_to('Login', new_user_session_path)  %>
      </li>
  <% end %>
  <% if user_signed_in? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user icon-white"></i> <%= current_user.login -%> <b class="caret"></b> </a>
        <ul class="dropdown-menu modal-body">
          <div class="row-fluid">
            <strong> <%= current_user.login -%></strong>
          </div>
          <div class="row-fluid">
              <%= current_user.email -%>
          </div>
          <div class="row-fluid">
              Ip: <%= request.location.ip %>
          </div>
          <div class="row-fluid">
            <p>
              Location : <%= request.location.city %> (<%= request.location.country %>)
            </p>
          </div>
          <li class="divider"></li>
          <li>
            <%= link_to('Account', edit_user_registration_path) -%>
          </li>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>
          </li>
        </ul>
      </li>
      <% if current_user.has_role? :admin %>
          <li>
            <%= link_to('Administration', users_path) %>
          </li>
      <% end %>
  <% else %>
      <li>
        <%= link_to('Sign up', new_user_registration_path)  %>
      </li>
  <% end %>
</ul>
